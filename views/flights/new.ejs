<%- include('../partials/header') %>
<form id="new-form" action="/flights" method="POST">
    <label for="airline">Airline:</label>
    <select name="airline">
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
    </select>
    <label for="flightNo">Flight Number (10-9999):</label>
    <input type="number" id="flightNo" name="flightNo" min="10" max="9999">
    <label for="departs">Choose a depart time:</label>
    <input id="departs" type="datetime-local" name="departs">
    <input type="submit" value="Add Flight">
</form>
<%- include('../partials/footer') %>